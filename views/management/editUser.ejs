<!doctype html>
<html>
  <%- include('../includes/head') %>
  <body>
    <%- include('../includes/header') %>

    <!-- Whole content container -->
    <div class="flex flex-col min-h-screen text-white bg-gray-900 font-sans">
      <!-- Right Main Panel -->
      <main class="flex-1 flex flex-col p-6 space-y-6">
        <!-- Session Info -->
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-4 flex justify-between items-center">
          <div class="flex flex-wrap gap-6 text-sm text-gray-300">
            <span>Session: <span class="text-green-400">session-<%= currentSessionId.session_id %></span></span>
            <span><%= currentSessionId.date %></span>
            <span>|</span>
            <span>ðŸ•’ <%= currentSessionId.time %></span>
          </div>
          
        </div> 
        </div>
     <div class="flex flex-col items-center justify-center bg-gray-900 border border-gray-700 rounded-lg p-6 min-h-screen text-gray-500">
  <form action="/userManagement/<%= user._id%>/update" method="POST" class="w-full max-w-md space-y-4">
    <input type="text" name="name" value="<%= user.name %>" class="w-full p-3 bg-gray-800 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    <input type="email" name="email" value="<%= user.email %>" class="w-full p-3 bg-gray-800 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    <label class="flex items-center space-x-2">
      <input
        type="checkbox"
        name="isAdmin"
        value="true"
        <%= user.isAdmin ? 'checked' : '' %>
        class="form-checkbox h-5 w-5 text-blue-600"
      />
      <span class="text-white">Admin</span>
    </label>
    <button type="submit" class="w-md p-3 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400">Save Changes</button>
  </form>
  <form action="/userManagement/<%= user._id%>/delete" method="POST" class="w-full max-w-md mt-4">
        <input type="hidden" name="user_id" value="<%= user._id %>">
        <button type="submit" class="w-full p-3 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400">
          Delete User
        </button>
  </form>
      
      </div>
      </main>
    </div>
  </body>
</html>
