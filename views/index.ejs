<!doctype html>
<html>
<%- include('includes/head')%>
  <body>
    <header class="bg-gray-900 px-6 py-4 flex justify-between items-center border-b border-gray-700">
      <div class="flex items-center gap-3">
        <img src="/images/terminal.png" alt="Terminal Icon" class="w-5 h-5 " />
        <h1 class="text-green-400 font-semibold text-lg">CommandCast</h1>
      </div>
  
    </header>

    <div class="flex items-center justify-center h-screen text-white bg-gray-900 font-sans">
        <main class="bg-gray-900 p-8 rounded-lg shadow-lg space-y-4">
          <form action="/login" method="post" autocomplete="off"  class="flex flex-col space-y-4 w-96">
            <input type="text" name="email" placeholder="email" required class="px-4 py-2 rounded border border-gray-600 placeholder-gray-600 bg-gray-800 text-white w-full" />
            <input type="password" name="password" placeholder="password" required class="px-4 py-2 rounded border border-gray-600 placeholder-gray-600 bg-gray-800 text-white w-full" />
               <button class="text-sm text-gray-800 bg-white hover:bg-gray-200 px-4 py-2 rounded border border-gray-600 w-full">
              Login
            </button>
          </form>
          <a href="/signup" class="text-sm text-gray-800 bg-white hover:bg-gray-200 px-4 py-2 rounded border border-gray-600 w-full text-center block">
            Signup
          </a>
          <a href="/passwordReset" class="text-blue-400 hover:text-blue-500 underline ml-1">Forgot Password</a>
        </main>
      </div>
  </body>
</html>