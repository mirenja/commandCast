<!doctype html>
<html>
<%- include('includes/head')%>
  <body>
    <header class="bg-gray-900 px-6 py-4 flex justify-between items-center border-b border-gray-700">
      <div class="flex items-center gap-3">
        <img src="/images/terminal.png" alt="Terminal Icon" class="w-5 h-5 " />
        <h1 class="text-green-400 font-semibold text-lg">CommandCast</h1>
      </div>

      <div class="flex items-center gap-5">
        <span class="text-sm text-gray-400">Logged in as: <span class="text-green-400">peaches@gmail.com</span></span>
        <button class="text-sm text-white bg-green-600 hover:bg-green-700 px-4 py-2 rounded">
          Connect
        </button>
      </div>

    </header>
    <!-- Main Content Container -->
  <div class="flex h-screen text-white bg-gray-900 font-sans">
  <!-- Connected Clients Sidebar -->
  <aside class="w-72 bg-gray-800 p-4 border-r border-gray-700">
    <h2 class="text-green-400 text-lg font-semibold mb-4">Connected Clients</h2>

    <div class="flex items-center justify-between text-sm mb-4">
      <span class="bg-green-600 text-white px-2 py-0.5 rounded-full">4 Online</span>
      <span class="bg-gray-600 text-white px-2 py-0.5 rounded-full">1 Offline</span>
    </div>

    <!-- Client Card -->
    <div class="space-y-3">
      <div class="bg-gray-700 p-3 rounded-lg border border-green-500">
        <h3 class="font-medium">Web Server 1</h3>
        <p class="text-sm text-gray-300">Active</p>
        <p class="text-xs text-gray-400">Last seen: just now</p>
        <p class="text-xs text-gray-400">192.168.1.101</p>
      </div>

      <div class="bg-gray-700 p-3 rounded-lg border border-green-500">
        <h3 class="font-medium">Database Server</h3>
        <p class="text-sm text-gray-300">Active</p>
        <p class="text-xs text-gray-400">Last seen: just now</p>
        <p class="text-xs text-gray-400">192.168.1.102</p>
      </div>

      <div class="bg-gray-700 p-3 rounded-lg border border-gray-600 opacity-60">
        <h3 class="font-medium">Load Balancer</h3>
        <p class="text-sm text-gray-300">Inactive</p>
        <p class="text-xs text-gray-400">Last seen: 1h ago</p>
        <p class="text-xs text-gray-400">192.168.1.103</p>
      </div>

    </div>
  </aside>

  <!-- Right Main Panel -->
  <main class="flex-1 flex flex-col">
  <div class="bg-gray-800 border border-gray-700  p-4  relative"> <!-- Session Row -->
    <div class="flex justify-between items-center mb-4">
      <div class="flex items-center gap-4 text-sm text-gray-300 mb-6">
        <span>Session: <span class="text-green-400">session-1745261709441</span></span>
        <span> 21/04/2025</span>
        <span>ðŸ•’ Started: 20:55:09 (0m)</span>
      </div>
      <div>
        <button
              class="text-xs text-white bg-gray-700 hover:bg-gray-600 px-3 py-1.5 rounded-md border border-gray-600 disabled:opacity-40">
              Export Log
        </button>
      </div>
    </div>
  </div>
    <!-- Command Input Row -->
    <div class="flex items-center gap-4">
      <input type="text" placeholder="Connect to send commands..." class="w-full bg-gray-800 border border-gray-600 text-sm text-white px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-green-500">
      <button class="bg-green-500 hover:bg-green-600 text-white px-3 py-1.5 rounded-md">
        Send
      </button>
    </div>

    <!-- Placeholder for logs / results -->
    <div class="flex-1 bg-gray-800 border border-gray-700 rounded-lg p-4 text-center text-gray-500">
      <p>No commands sent yet</p>
      <p class="text-sm mt-1">Use the command input above to send a command to all connected clients</p>
    </div>
  </main>
  </div>



  </body>
</html>