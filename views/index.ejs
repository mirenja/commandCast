<!doctype html>
<html>
<%- include('includes/head')%>
  <body>
    <%- include('includes/header')%>

    <!-- whole content container -->
  <div class="flex h-screen text-white bg-gray-900 font-sans">
    <!-- Connected Clients Sidebar -->
    <%- include('includes/sidebar.ejs',{clients})%>

    <!-- Right Main Panel -->
    <% if (message) { %>
      <script>
        window.alert("<%= message %>")
      </script>
    <% } %>
    <main class="flex-1 flex flex-col p-6 space-y-4 bg-gray-900">
    <div class="bg-gray-800 border border-gray-700 rounded-lg p-4 flex justify-between items-center">
      <div class="flex items-center gap-6 text-sm text-gray-300">
        <span>Session: <span class="text-green-400">session-1745266099713</span></span>
        <span>21/04/2025</span>
        <span>ðŸ•’ Started: 22:08:19 (0m)</span>
      </div>
      <button class="text-xs text-gray-600 bg-white hover:bg-gray-200 px-4 py-2 rounded border border-gray-600">
        Export Log
      </button>
    </div>
    <div class="flex items-center gap-4">
      <input type="text" placeholder="Connect to send commands..." class="w-full bg-gray-800 border border-gray-600 text-sm text-white px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-green-500">
      <button class="bg-green-600 hover:bg-green-700 text-white text-xs px-4 py-2 rounded-s-sm">
        Send
      </button>
    </div>
    <div class="flex items-center justify-between">
      <div class="flex gap-4">
        <button class="bg-gray-700 text-white px-4 py-2 rounded-lg text-sm">Command Results</button>
        <button class="bg-gray-800 text-gray-400 px-4 py-2 rounded-lg text-sm">Session Logs</button>
      </div>
      <button class="bg-white hover:bg-gray-200 text-gray-600 text-xs px-4 py-2 rounded-md border border-gray-600">Clear Results</button>
    </div>

    <div class="flex-1 bg-gray-900 border border-gray-700 rounded-lg flex flex-col items-center justify-center text-gray-500 p-6 text-center">
      <p class="text-lg">No commands sent yet</p>
      <p class="text-sm mt-1">Waiting.....</p>
    </div>
    </main>
  </div>
  
  </body>
</html>